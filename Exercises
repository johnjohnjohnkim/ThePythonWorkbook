4. Area of a Field

print("Please give the following measurements in feet: ")
width = int(input("Width: "))
length = int(input("Length: "))
area = width * length

aia = round(area/43560,2)

print(f"Your field's area is {aia} acres")

5. Bottle deposits

small = int(input("Enter the number of bottles that hold one liter or less: "))

large = int(input("Enter the number of bottles that hold more than one liter: "))

refund = round(small * 0.10 + large * 0.25,2)
print(f"Your refund is ${refund}.")

6. Tax and Tip

meal = int(input("Price of meal: "))
tax = meal * 0.13
tip = meal * 0.18
total = round(meal + tax + tip,2)

print(f"Tax:               ${tax}")
print(f"Tip:               ${tip}")
print(f"Total:             ${total}")

7. Sum of positive integers

n = int(input("Enter POSITIVE integer here: "))

if n <= 0:
        print("\nError, please enter another number")

else: 
    sum = (n * (n + 1)/2)
    print(f"\nYour sum is: {sum}")
    
8. Widgets and Gizmos

widget = int(input("Enter number of widgets: "))
gizmos = int(input("Enter number of gizmos: "))

gwidget = 75 * widget
ggizmos = 112 * gizmos
total = gwidget + ggizmos

print(f"\n\nYour gizmos weight: {gwidget}g")
print(f"Your widget weight: {ggizmos}g")
print(f"Your total weight:  {total}g")

9. Compound Interest

balance = int(input("Your bank balance: $"))
yearnumber = int(input("In how many years?: "))

#FV = P * (((1 + ((r/100.0)/n)) ** (n*y)))
total = round(balance * (((1 + ((4/100.0)/1)) ** (1 * yearnumber))),2)

print(f"Your balance in {yearnumber} years will be ${total}. Have a good day!")

10. Arithmetic

a = int(input("Value of a: "))
b = int(input("Value of b: "))



print("\n1. a + b")
print("2. a - b")
print("3. a * b")
print("4. a / b")
print("5. Remainder of a / b")
print("6. log10(a)")
print("7. a ^ b\n")

choice = int(input("Which arithmetic would you like to do?: "))

import math

if choice == 1: 
    one = a + b
    print(f"Answer: {one}")
if choice == 2: 
    two = a - b
    print(f"Answer: {two}")
if choice == 3:
    three = a * b
    print(f"Answer: {three}")
if choice == 4: 
    four = a / b
    print(f"Answer: {four}")
if choice == 5: 
    five = a % b
    print(f"Answer: {five}")
if choice == 6: 
    six = math.log10(a)
    print(f"Answer: {six}")
if choice == 7: 
    seven = a ** b
    print(f"Answer: {seven}")

11. Fuel Efficiency

print("[A] Convert from MPG to L/100Km\n[B] Convert from L/100Km to MPG")

convert_choice = input("\nPlease choose [A] or [B]: ")
if convert_choice == "A" or convert_choice == "a":
    mpg_convert = int(input("\nHow many Miles per Gallon?: "))
    converted_mpg = round(235.214583/mpg_convert,2)
    print(f"\n{mpg_convert} MPG converts into {converted_mpg} L/100Km")
elif convert_choice == "B" or convert_choice == "b":
    km_convert = int(input("\nHow many Litres/100Km?: "))
    converted_km = round(235.215/km_convert,2)
    print(F"\n{km_convert}L/100Km converts into {converted_km} MPG")

13. Making Change

price = float(input("Total price at checkout: $"))
customer_cash = int(input("Amount of cash given: $"))
difference = int(round(customer_cash - price,2))
cc_in_cents = difference*100
print("Your change is ${}".format(difference))

toonie_cent = 200
loonie_cent = 100
quarter_cent = 25
dime_cent = 10
nickel_cent = 5

print("\nYour change consists of:\n")
print(cc_in_cents//toonie_cent, "toonies")
cc_in_cents = cc_in_cents % toonie_cent

print(cc_in_cents//loonie_cent, "loonies")
cc_in_cents = cc_in_cents % loonie_cent

print(cc_in_cents//quarter_cent, "quarters")
cc_in_cents = cc_in_cents % quarter_cent

print(cc_in_cents//dime_cent, "dimes")
cc_in_cents = cc_in_cents % dime_cent

print(cc_in_cents//nickel_cent, "nickels")

